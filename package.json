{
  "engines": {
    "node": ">=4.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "config": {
    "MOCHA_OPTS": "test/**/*.spec.* --compilers .:babel-core/register --colors --recursive --require ./test/setup.js"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --require babel-register server.js --watch server.js  --port 9000",
    "prebuild": "rimraf ./.tmp ./dist",
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.config.production.babel.js -p",
    "test": "mocha $npm_package_config_MOCHA_OPTS",
    "test:watch": "npm test -- --reporter Landing --watch --watch-extensions jsx",
    "buildx": "gulp pug && gulp styles:prod && gulp js:prod && gulp build && gulp serve:dist",
    "preprod": "rimraf ./.tmp ./dist",
    "prod": "gulp pug && gulp styles:prod && gulp js:prod && gulp build",
    "cover": "rm -rf coverage && babel-node ./node_modules/istanbul/lib/cli cover _mocha -- $npm_package_config_MOCHA_OPTS",
    "cover:all": "rm -rf coverage && babel-node ./node_modules/istanbul/lib/cli --include-all-sources cover _mocha -- $npm_package_config_MOCHA_OPTS && open coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-riot": "^1.1.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "browser-sync": "^2.14.0",
    "chai": "^3.5.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "doiuse": "^2.3.0",
    "eslint": "^2.7.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-riot": "^0.1.6",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cache": "^0.4.0",
    "gulp-debug": "^2.1.2",
    "gulp-if": "^2.0.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-minify-html": "^1.0.6",
    "gulp-newer": "^1.1.0",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^6.1.0",
    "gulp-pug": "^2.0.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "gulp-useref": "^3.0.8",
    "gulp-util": "^3.0.7",
    "jade": "^1.11.0",
    "mocha": "^2.4.5",
    "postcss-assets": "^4.0.1",
    "postcss-cssnext": "^2.5.2",
    "postcss-easy-import": "^1.0.1",
    "postcss-import": "^8.1.0",
    "postcss-loader": "^0.9.1",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.3.3",
    "postcss-short": "^1.4.0",
    "riotjs-loader": "^3.0.0",
    "postcss-sprites": "^4.0.0",
    "pug": "^2.0.0-beta6",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-notifier": "^1.3.0"
  },
  "dependencies": {
    "lodash": "^4.8.2",
    "npm-modernizr": "^2.8.3",
    "sanitize.css": "^3.3.0"
  }
}
